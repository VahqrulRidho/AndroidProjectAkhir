<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vidio.VidioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/text_judul1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="Belajar Kotlin Dasar untuk Pemula"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/video1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="https://www.youtube.com/watch?v=6dSNbskzlz4list=PL-CtdCApEFH_hja5vRJgQOXylCiQud7Qa"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/text_judul2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:text="Program Hello World"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/video2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="https://www.youtube.com/watch?v=DhRIBJ6q8Kslist=PL-CtdCApEFH_hja5vRJgQOXylCiQud7Qaindex=2"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:layout_marginBottom="20dp"/>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>